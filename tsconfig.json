{
  "compilerOptions": {
    /* Type Checking */
    /* Modules */
    /* Emit */
    /* JavaScript Support */
    /* Editor Support */
    /* Interop Constraints */
    /* Backwards Compatibility */
    /* Language and Environment */
    /* Compiler Diagnostics */
    /* Projects */
    /* Output Formatting */
    /* Completeness */
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "node",
    "types": ["jsdom", "unplugin-icons/types/vue", "naive-ui/volar"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "isolatedModules": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "@types/**/*.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
